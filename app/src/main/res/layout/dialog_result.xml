<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:elevation="24dp"
        android:layout_margin="12dp"
        android:maxWidth="360dp"
        android:layout_gravity="center">

        <!-- Header Icon/Status - Reduced size -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="✗"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#F44336"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Title - Reduced size and margin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer Review"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.02"
            android:textAlignment="center" />

        <!-- Answer Container - Optimized for small screens -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F9FA"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <!-- Your Answer - Stacked layout for small screens -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="#FFEBEE">



                <TextView
                    android:id="@+id/wrongAnswerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 × 5 = 20"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:gravity="center"
                    android:elevation="1dp"
                    android:maxLines="2"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="16sp" />

            </LinearLayout>

            <!-- Correct Answer - Stacked layout for small screens -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#E8F5E8">

                <TextView
                    android:id="@+id/correctAnswerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 + 5 = 17"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:gravity="center"
                    android:elevation="1dp"
                    android:maxLines="2"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Button - Optimized height -->
        <Button
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="CONTINUE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:elevation="8dp"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-medium"
            android:stateListAnimator="@null"
            android:foreground="?android:attr/selectableItemBackground"
            android:minHeight="48dp" />





    </LinearLayout>

</ScrollView>