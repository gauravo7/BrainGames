<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#6C5CE7"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="100dp"
    tools:context=".GuessNumber.GuessNumberFragment">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!-- Animated background particles -->
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#40FFE066"
        android:alpha="0.6"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#404ECDC4"
        android:alpha="0.7"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp" />

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#40A8E6CF"
        android:alpha="0.8"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="60dp" />

    <View
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="#40FFD93D"
        android:alpha="0.5"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="30dp" />

    <!-- Guidelines for responsive design -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH_game_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH_input_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <!-- Vertical guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <!-- Top Status Card with Glassmorphism Effect -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:strokeColor="#40FFFFFF"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#20FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/guideV_end"
        app:layout_constraintStart_toStartOf="@id/guideV_start"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Score Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCORE"
                    android:textColor="#80FFFFFF"
                    android:textSize="10sp"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/neut" />

                <TextView
                    android:id="@+id/points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neut"
                    android:letterSpacing="0.02"
                    android:text="23,233"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROGRESS"
                    android:textColor="#80FFFFFF"
                    android:textSize="10sp"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/neut"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/timeProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#4ECDC4"
                    android:progressBackgroundTint="#20FFFFFF" />
            </LinearLayout>

            <!-- Time Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:textColor="#80FFFFFF"
                    android:textSize="10sp"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/neut" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neut"
                    android:letterSpacing="0.02"
                    android:text="02:34"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Game Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topCard"
        app:layout_constraintStart_toStartOf="@id/guideV_start"
        app:layout_constraintEnd_toEndOf="@id/guideV_end"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/neut"
        android:letterSpacing="0.02"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="8"
        tools:text="Guess the Number" />

    <!-- Question Display Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questionCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="16dp"
        app:strokeColor="#60FFFFFF"
        app:strokeWidth="2dp"
        app:cardBackgroundColor="#30FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/questionTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/neut"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="8dp"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="8"
            tools:text="234" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Success Animation -->
    <ImageView
        android:id="@+id/thumbs_up"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        android:src="@drawable/thumbs_up"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp" />

    <!-- Input Area -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputCard"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:strokeColor="#40FFFFFF"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#25FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/questionCard"
        app:layout_constraintStart_toStartOf="@id/guideV_start"
        app:layout_constraintEnd_toEndOf="@id/guideV_end"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR ANSWER"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:fontFamily="@font/neut"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#15FFFFFF"
                android:padding="16dp"
                android:textSize="32sp"
                android:fontFamily="@font/neut"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#60FFFFFF"
                android:hint="Enter number"
                android:inputType="number"
                android:maxLength="10" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/inputCard"
        app:layout_constraintStart_toStartOf="@id/guideV_start"
        app:layout_constraintEnd_toEndOf="@id/guideV_end"
        android:layout_marginTop="24dp">


    </LinearLayout>

    <!-- Points Animation -->
    <TextView
        android:id="@+id/movePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neut"
        android:textColor="#4ECDC4"
        android:textSize="40sp"
        android:textStyle="bold"
        android:elevation="16dp"
        android:visibility="invisible"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="+150"
        tools:visibility="visible" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tipsCard"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tips"
                />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/tipsCard"
        app:layout_constraintEnd_toEndOf="@id/tipsCard"
        >


        <TextView
            android:id="@+id/tipsTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="100"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="center"
            android:fontFamily="@font/neut"

            />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>