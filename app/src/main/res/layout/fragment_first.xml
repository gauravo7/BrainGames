<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    >

<!--    <com.google.android.material.appbar.MaterialToolbar-->
<!--        android:id="@+id/toolbar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:navigationIconTint="@color/white"-->
<!--        app:navigationIcon="ba"-->
<!--        app:title="Numbers Theory"-->
<!--        app:titleTextColor="@color/white"-->
<!--        />-->
    <!-- Top Card (Points + SeekBar + Time) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/glassmorphism_border"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23,233"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:minWidth="60dp"
                android:fontFamily="@font/neut" />

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/custom_seekbar_progress"
                android:thumb="@drawable/custom_thumb"
                android:splitTrack="false" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:34"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:minWidth="50dp"
                android:fontFamily="@font/neut" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Total Questions -->
    <TextView
        android:id="@+id/totalQuestions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10 Questions"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        android:fontFamily="@font/neut"
        app:layout_constraintTop_toBottomOf="@id/topCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Floating Points Animation -->
    <TextView
        android:id="@+id/movePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+150"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:fontFamily="@font/neut"
        app:layout_constraintTop_toBottomOf="@id/totalQuestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        tools:visibility="visible" />

    <!-- Question ScrollView (30% of screen height) -->
    <ScrollView
        android:id="@+id/questionScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/movePoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/questionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/question_card_bg"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/question_card_border"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp"
                android:minHeight="120dp">

                <TextView
                    android:id="@+id/operand1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/neut"
                    android:gravity="center"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2"
                    android:text="12"
                    android:textColor="@color/question_text"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="32sp" />

                <TextView
                    android:id="@+id/operator1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/neut"
                    android:gravity="center"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/question_text"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="32sp" />



                <TextView
                    android:id="@+id/operand2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/neut"
                    android:gravity="center"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2"
                    android:text="12"
                    android:textColor="@color/question_text"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="32sp" />

                <TextView
                    android:id="@+id/operator2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/neut"
                    android:gravity="center"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2"
                    android:text="x"
                    android:textColor="@color/question_text"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="28sp" />

                <TextView
                    android:id="@+id/operand3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/neut"
                    android:gravity="center"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2"
                    android:text="12"
                    android:textColor="@color/question_text"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="28sp" />

                <TextView
                    android:id="@+id/equalTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/neut"
                    android:gravity="center"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2"
                    android:text="="
                    android:textColor="@color/question_text"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="32sp" />

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/neut"
                    android:gravity="center"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2"
                    android:text="12"
                    android:textColor="@color/question_text"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="32sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </ScrollView>



    <!-- Operations Container - Optimized for small screens -->
    <LinearLayout
        android:id="@+id/operationsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- First Row: Plus and Minus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/divide_button_bg"
                app:cardCornerRadius="16dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neut"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/divide_button_bg"
                app:cardCornerRadius="16dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neut"
                        android:text="−"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Second Row: Multiply and Divide -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:clickable="true"
                app:strokeColor="@color/white"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/divide_button_bg"
                app:cardCornerRadius="16dp"
                app:strokeWidth="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neut"
                        android:text="×"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/division"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/divide_button_bg"
                app:cardCornerRadius="16dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neut"
                        android:text="÷"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Loading Progress Bar -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pgBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        app:indicatorColor="@color/progress_color"
        app:indicatorSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/progress_track_color"
        app:trackThickness="3dp" />





    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tipsCard"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tips" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/tipsCard"
        app:layout_constraintEnd_toEndOf="@id/tipsCard"
        >


        <TextView
            android:id="@+id/tipsTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="100"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="center"
            android:fontFamily="@font/neut"

            />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
