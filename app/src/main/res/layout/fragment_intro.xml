<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
      >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
            android:background="@android:color/transparent"
            app:titleTextColor="@color/white"
            />

        <!-- Hero Section with Game Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginBottom="28dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="32dp"
            app:cardElevation="24dp"
            android:layout_marginTop="32dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/imageViewGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Game Description -->


        <!-- Best Score Card with Enhanced Design -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="24dp">

                <!-- Trophy Icon with Enhanced Background -->
                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="24dp"
                    android:background="#FEF3C7"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/trophy" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neut"
                        android:text="ðŸ† Best Score"
                        android:textColor="#64748B"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bestScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/neut"
                        android:textColor="#1E293B"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        tools:text="1,250" />

                </LinearLayout>

                <!-- Sparkle effect -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨"
                    android:textSize="28sp"
                    android:alpha="0.8" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Levels Section with Enhanced Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/neut"
                android:text="ðŸŽ¯ Levels"
                android:textColor="#F8FAFC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:background="#FFFFFF"
                android:alpha="0.7"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/levelsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:clipToPadding="false"
            android:paddingHorizontal="20dp" />

        <!-- Enhanced Start Game Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/startGame"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/primary_dark"
            app:cardCornerRadius="@dimen/_70sdp"
            app:cardElevation="20dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Enhanced Play Symbol -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="â–¶"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_36ssp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <!-- Start Game Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neut"
                    android:letterSpacing="0.08"
                    android:lineSpacingMultiplier="0.9"
                    android:text="START\nGAME"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/neut"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textColor="#F8FAFC"
            android:textSize="18sp"
            android:alpha="0.95" />

        <!-- Elegant Divider -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#CBD5E1"
                android:alpha="0.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="â—†"
                android:textColor="#CBD5E1"
                android:textSize="12sp"
                android:alpha="0.7" />

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#CBD5E1"
                android:alpha="0.6" />

        </LinearLayout>

        <!-- Enhanced Statistics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <!-- Section Title with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/neut"
                    android:text="ðŸ“Š Statistics"
                    android:textColor="#F8FAFC"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="#FFFFFF"
                    android:alpha="0.7" />

            </LinearLayout>

            <!-- Enhanced Positive Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#F0FDF4"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#DCFCE7"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="24dp"
                        android:background="#10B981" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/neut"
                            android:text="âœ… Positive Score"
                            android:textColor="#059669"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/positiveScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/neut"
                            android:text="850"
                            android:textColor="#047857"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02"
                            tools:text="850" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#E6FFFA"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ˆ"
                            android:textSize="24sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Negative Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FEF2F2"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#FECACA"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="24dp"
                        android:background="#EF4444" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/neut"
                            android:text="âŒ Negative Score"
                            android:textColor="#DC2626"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/negativeScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/neut"
                            android:text="245"
                            android:textColor="#B91C1C"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02"
                            tools:text="245" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#FFEBEE"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“‰"
                            android:textSize="24sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
</ScrollView>