<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8D86F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="24dp">

<!--        <FrameLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->

<!--            <com.airbnb.lottie.LottieAnimationView-->
<!--                android:id="@+id/background_animation_view"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:scaleType="centerCrop"-->
<!--                app:lottie_loop="true"-->
<!--                app:lottie_rawRes="@raw/background_train" />-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:text="Welcome!"-->
<!--                android:textColor="@android:color/white"-->
<!--                android:textSize="24sp" />-->

<!--        </FrameLayout>-->

        <!-- Game Icon Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="20dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/imageViewGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/neut"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Game Name -->
        <!--        <TextView-->
        <!--            android:id="@+id/gameName"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginBottom="32dp"-->
        <!--            android:fontFamily="@font/neut"-->
        <!--            android:letterSpacing="0.02"-->
        <!--            android:textAlignment="center"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="36sp"-->
        <!--            android:textStyle="bold"-->
        <!--            tools:text="Game Name" />-->

        <!-- Best Score Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Trophy Icon with Circular Background -->
                <LinearLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="20dp"
                    android:background="#FEF3C7"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/trophy" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neut"
                        android:text="🏆 Best Score"
                        android:textColor="#6B7280"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/bestScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/neut"
                        android:textColor="#1F2937"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        tools:text="1,250" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/neut"
            android:text="Levels"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/levelsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/startGame"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/primary_dark"
            app:cardCornerRadius="@dimen/_60sdp"
            app:cardElevation="16dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Play Symbol using TextView -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="▶"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_32ssp"
                    android:textStyle="bold" />

                <!-- Start Game Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neut"
                    android:letterSpacing="0.05"
                    android:lineSpacingMultiplier="0.9"
                    android:text="START\nGAME"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- Decorative Divider -->
        <!--        <com.google.android.material.button.MaterialButton-->
        <!--            style="@style/Widget.Material3.Button.OutlinedButton"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="12dp"-->
        <!--            android:text="Start Game"-->
        <!--            app:strokeWidth="2dp"-->
        <!--            android:drawableEnd="@drawable/baseline_arrow_right_alt_24"-->
        <!--            android:textColor="@color/white"-->
        <!--            app:strokeColor="@color/white" />-->

        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_marginVertical="20dp"
            android:background="#E5E7EB" />

        <!-- Score Statistics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/neut"
                android:text="📊 Statistics"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Positive Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#F0FDF4"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="20dp"
                        android:background="#10B981" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/neut"
                            android:text="✅ Positive Score"
                            android:textColor="#059669"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/positiveScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/neut"
                            android:text="850"
                            android:textColor="#047857"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:text="850" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📈"
                        android:textSize="24sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Negative Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="#FEF2F2"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="20dp"
                        android:background="#EF4444" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/neut"
                            android:text="❌ Negative Score"
                            android:textColor="#DC2626"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/negativeScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/neut"
                            android:text="245"
                            android:textColor="#B91C1C"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:text="245" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📉"
                        android:textSize="24sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>